# change focus
lalt - h : yabai -m window --focus west
lalt - j : yabai -m window --focus south
lalt - k : yabai -m window --focus north
lalt - l : yabai -m window --focus east
lalt - p : yabai -m window --focus stack.prev
lalt - n : yabai -m window --focus stack.next

# shift window in current workspace
lalt + shift - h : yabai -m window --swap west || $(yabai -m window --display west; yabai -m display --focus west)
lalt + shift - j : yabai -m window --swap south || $(yabai -m window --display south; yabai -m display --focus south)
lalt + shift - k : yabai -m window --swap north || $(yabai -m window --display north; yabai -m display --focus north)
lalt + shift - l : yabai -m window --swap east || $(yabai -m window --display east; yabai -m display --focus east)

# go back to previous workspace (kind of like back_and_forth in i3)
lalt - b : yabai -m space --focus recent

# move focused window to previous workspace
lalt + shift - b : yabai -m window --space recent; \
                  yabai -m space --focus recent

# Change workspace
lalt - 0x12 : yabai -m space --focus 1
lalt - 0x13 : yabai -m space --focus 2
lalt - 0x14 : yabai -m space --focus 3
lalt - 0x15 : yabai -m space --focus 4
lalt - 0x17 : yabai -m space --focus 5
lalt - 0x16 : yabai -m space --focus 6

# move focused window to workspace N
lalt + shift + cmd - 0x12 : yabai -m window --space 1
lalt + shift + cmd - 0x13 : yabai -m window --space 2
lalt + shift + cmd - 0x14 : yabai -m window --space 3
lalt + shift + cmd - 0x15 : yabai -m window --space 4
lalt + shift + cmd - 0x17 : yabai -m window --space 5
lalt + shift + cmd - 0x16 : yabai -m window --space 6

# move focused window to workspace N and focus N
lalt + shift - 0x12 : yabai -m window --space 1; yabai -m space --focus 1
lalt + shift - 0x13 : yabai -m window --space 2; yabai -m space --focus 2
lalt + shift - 0x14 : yabai -m window --space 3; yabai -m space --focus 3
lalt + shift - 0x15 : yabai -m window --space 4; yabai -m space --focus 4
lalt + shift - 0x17 : yabai -m window --space 5; yabai -m space --focus 5
lalt + shift - 0x16 : yabai -m window --space 6; yabai -m space --focus 6

# Resize windows
ctrl + lalt - h : \
    yabai -m window --resize left:-100:0 ; \
    yabai -m window --resize right:-100:0

ctrl + lalt - j : \
    yabai -m window --resize bottom:0:100 ; \
    yabai -m window --resize top:0:100

ctrl + lalt - k : \
    yabai -m window --resize top:0:-100 ; \
    yabai -m window --resize bottom:0:-100

ctrl + lalt - l : \
    yabai -m window --resize right:100:0 ; \
    yabai -m window --resize left:100:0

# Switch mode bsp/stack
lalt + shift - m : yabai -m space --layout $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "stack" else "bsp" end')

# Float and center window
lalt + shift - c : yabai -m window --toggle float;\
                yabai -m window --grid 4:4:1:1:2:2

# Float / Unfloat window
lalt + shift - space : yabai -m window --toggle float

# close focused window
lalt - w : yabai -m window --close

# enter fullscreen mode for the focused container
lalt - f : yabai -m window --toggle zoom-fullscreen

# toggle window native fullscreen
lalt + shift - f : yabai -m window --toggle native-fullscreen
