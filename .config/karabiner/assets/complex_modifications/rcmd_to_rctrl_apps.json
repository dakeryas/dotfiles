{
  "title": "Right CMD to CTRL in specific apps",
  "rules": [
    {
      "description": "Change RightCMD to RightCTRL for some apps",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_command"
          },
          "to": {
            "key_code": "right_control"
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.apple\\.Terminal$"],
              "file_paths": [
                ".*/bin/zathura$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
